<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="F:\Code\github\KafkaExample\logs\offenderscanner-internal.log"
      internalLogLevel="Info" >


  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file -->
    <target xsi:type="File" name="file" fileName="F:\Code\github\KafkaExample\logs\${appdomain:format={1\}}-${date:format=yyyyMMdd}.log"
            layout="${date} ${level:uppercase=true} - [${logger}] - Thread ${threadid}  - ${message} ${exception}" />
    <target xsi:type="Console" name="console"
            layout="${date} ${level:uppercase=true} - [${logger}] - Thread ${threadid}  - ${message} ${exception}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Trace" writeTo="file,console" />

  </rules>
</nlog>